@model IEnumerable<EnterprisesNew.Models.Enterprise>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create", new { @class = "btn btn-default" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            Employee Count
        </th>
        <th>
            Competence Count
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.ActionLink(item.Name, "Edit", new {id = item.ID }, "Enterprises")
        </td>
        <td>
            @item.Employees.ToList().Count()
        </td>
        <td>
            @item.Competences.ToList().Count()
        </td>
    </tr>
}

</table>
