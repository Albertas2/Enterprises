@model IEnumerable<EnterprisesNew.Models.CompetenceRating>

@{
    ViewBag.Title = "Index";
}

<h2>Employees</h2>
@Html.DropDownList("EnterpriseID", null, "All Enterprises", htmlAttributes: new { @class = "form-control", onchange = "document.location.href = '/Employees/Index/' + this.options[this.selectedIndex].value;" })
<p>
    @Html.ActionLink("Create New", "Create", new { @class = "btn btn-default" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Employee.Name)
        </th>
        <th>
           Competence Name
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Grade)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.ActionLink(item.Employee.Name, "Edit", new { id = item.EmployeeID, entID = item.Employee.EnterpriseID }, "Employees")
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Competence.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Grade)
        </td>
    </tr>
}

</table>
