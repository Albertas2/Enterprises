@model IEnumerable<EnterprisesNew.Models.Competence>

@{
    ViewBag.Title = "Index";
}

<h2>Competences</h2>
@Html.DropDownList("EnterpriseID", null, "All Enterprises", htmlAttributes: new { @class = "form-control", onchange = "document.location.href = '/Competences/Index/' + this.options[this.selectedIndex].value;" })
<p>
    @Html.ActionLink("Create New", "Create", new { @class = "btn btn-default" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.ActionLink(item.Name, "Edit", new { id = item.ID }, "Competences")
        </td>
    </tr>
}

</table>
